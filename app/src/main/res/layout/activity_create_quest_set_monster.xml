<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_quest_set_monster"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/bg"
    tools:context="com.example.wilki.clashoncampus.CreateQuestSetMonsterActivity">

    <TextView
        android:text="SELECT MONSTER"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />



    <TextView
        android:text="99"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="20sp"
        android:id="@+id/textView7" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textSize="20sp"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_alignBottom="@+id/seekBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="80sp"
        android:layout_height="80sp"
        app:srcCompat="@drawable/border"
        android:id="@+id/imageView4"
        android:layout_alignTop="@+id/imageView5"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="80sp"
        android:layout_height="80sp"
        app:srcCompat="@drawable/border"
        android:id="@+id/imageView2"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignLeft="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4" />

    <ImageView
        android:layout_width="80sp"
        android:layout_height="80sp"
        app:srcCompat="@drawable/border"
        android:layout_marginTop="21dp"
        android:id="@+id/imageView3"
        android:layout_below="@+id/imageView1"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_alignStart="@+id/imageView1" />

    <ImageView
        android:layout_width="80sp"
        android:layout_height="80sp"
        app:srcCompat="@drawable/border"
        android:id="@+id/imageView1"
        android:layout_alignTop="@+id/monster1"
        android:layout_alignRight="@+id/monster1"
        android:layout_alignEnd="@+id/monster1" />

    <ImageView
        android:layout_width="65sp"
        android:layout_height="65sp"
        app:srcCompat="@drawable/ork"
        android:layout_marginTop="18dp"
        android:id="@+id/monster1"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/startCreatingQuestBtn"
        android:layout_alignStart="@+id/startCreatingQuestBtn" />

    <ImageView
        android:layout_width="80sp"
        android:layout_height="80sp"
        app:srcCompat="@drawable/border"
        android:id="@+id/imageView5"
        android:layout_alignTop="@+id/monster1"
        android:layout_alignRight="@+id/seekBar"
        android:layout_alignEnd="@+id/seekBar" />

    <SeekBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:id="@+id/seekBar"
        android:max="100"
        android:progress="20"
        android:layout_above="@+id/startCreatingQuestBtn"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="MONSTER LEVEL"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/imageView5"
        android:layout_toStartOf="@+id/imageView5" />

    <Button
        android:text="CANCEL MONSTER"
        android:layout_width="wrap_content"
        android:layout_height="80sp"
        android:textSize="18sp"
        android:layout_marginLeft="80dp"
        android:id="@+id/backToMainMenuBtn"
        android:background="@drawable/button"
        android:onClick="returnToMap"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="SET MONSTER"
        android:layout_width="wrap_content"
        android:layout_height="80sp"
        android:textSize="18sp"
        android:layout_marginLeft="80dp"
        android:id="@+id/startCreatingQuestBtn"
        android:background="@drawable/button"
        android:onClick="setMonster"
        android:layout_above="@+id/backToMainMenuBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp" />



</RelativeLayout>
