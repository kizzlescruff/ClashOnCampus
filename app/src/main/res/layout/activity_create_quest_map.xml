<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestMapActivity" >

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.wilki.clashoncampus.QuestMapActivity" />

    <ImageButton
        android:layout_width="100dp"
        android:id="@+id/settings_button"
        android:layout_marginBottom="10dp"
        android:background="@drawable/settings_button"
        android:padding="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_gravity="bottom"
        android:layout_height="100dp"
        style="?android:attr/borderlessButtonStyle" />

    <ImageButton
        android:layout_width="100dp"
        android:id="@+id/close_button"
        android:layout_marginBottom="10dp"
        android:background="@drawable/settings_close"
        android:padding="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_gravity="bottom"
        android:layout_height="100dp"
        style="?android:attr/borderlessButtonStyle" />

    <ImageButton
        android:layout_width="100dp"
        android:id="@+id/add_marker_button"
        android:layout_marginBottom="10dp"
        android:background="@drawable/add_marker"
        android:padding="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_gravity="bottom|right"
        android:layout_height="100dp"
        style="?android:attr/borderlessButtonStyle" />

    <ImageButton
        android:layout_width="100dp"
        android:id="@+id/finish_button"
        android:layout_marginBottom="10dp"
        android:background="@drawable/finish"
        android:padding="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="120dp"
        android:layout_gravity="bottom|right"
        android:layout_height="100dp"
        style="?android:attr/borderlessButtonStyle" />

    <LinearLayout
        android:id="@+id/settings_menu"
        android:layout_width="400dp"
        android:layout_height="350dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:background="@color/bg"
        tools:context=".Quest_Map"
        android:orientation="vertical">

        <TextView
            android:text="Settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="7dp"
            android:id="@+id/textView"
            android:textColor="@android:color/white"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="36sp" />

        <TextView
            android:text="VOLUME"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="25dp"
            android:textAllCaps="true"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:text="LOW"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:layout_weight="1"
                android:layout_gravity="end"
                android:textAllCaps="true"
                android:textStyle="normal|bold"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textAlignment="textEnd" />

            <SeekBar
                android:layout_height="wrap_content"
                android:id="@+id/seekBar1"
                android:layout_weight="1"
                android:layout_width="220dp" />

            <TextView
                android:text="HIGH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:textStyle="normal|bold"
                android:textAllCaps="true"
                android:layout_gravity="start"
                android:textSize="18sp"
                android:textAlignment="viewStart" />
        </LinearLayout>

        <Button
            android:layout_width="350dp"
            android:id="@+id/main_menu"
            android:scaleType="fitCenter"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="30dp"
            android:layout_gravity="center_horizontal"
            style="@style/Widget.AppCompat.ImageButton"
            android:background="@drawable/button"
            android:layout_height="84dp"
            android:text="RETURN TO MAIN MENU"
            android:textColor="#FFFFFF"
            />

    </LinearLayout>
</FrameLayout>

